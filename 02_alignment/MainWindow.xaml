            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalContentAlignment="Left">Top</Button>
        <Button Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalContentAlignment="Right">Center</Button>
        <Button Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center">Bottom</Button>
